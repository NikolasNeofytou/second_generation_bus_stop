# Database & Redis
DATABASE_URL=postgres://cybus:secret@localhost:5432/cybus
REDIS_URL=redis://localhost:6379

# HTTP server
PORT=3001

# Government feeds (replace with official URLs)
GTFS_STATIC_URL=https://example.gov.cy/gtfs/gtfs.zip
GTFS_RT_URL=https://example.gov.cy/gtfs/vehiclePositions.pb
# Polling interval for realtime feed (ms)
GTFS_RT_INTERVAL_MS=15000

# SIRI VehicleMonitoring (alternative to GTFS-RT)
# Set this if your provider offers a SIRI VM endpoint instead of GTFS-RT
SIRI_URL=https://example.gov.cy/siri/vehicle-monitoring
# Optional: Additional headers as a JSON object (e.g., authorization keys)
# Example: {"Ocp-Apim-Subscription-Key":"<key>"}
SIRI_HEADERS={}
# Polling interval for SIRI (ms). Falls back to GTFS_RT_INTERVAL_MS if not set
SIRI_POLL_INTERVAL_MS=15000
# Request method: GET (default) or SOAP_VM for .asmx SOAP VehicleMonitoring
SIRI_METHOD=GET
# When using SOAP_VM, provide SOAPAction from WSDL page for GetVehicleMonitoring
SIRI_SOAP_ACTION="http://www.siri.org.uk/siri/GetVehicleMonitoring"
# Optional filters
SIRI_REQUESTOR_REF=demo
SIRI_LINE_REF=
SIRI_OPERATOR_REF=
